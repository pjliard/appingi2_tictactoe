<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ThirdActivity">

    <TextView
            android:text="Date :"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:id="@+id/date" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="textStart"
            android:textSize="24sp"/>
    <ImageView
            android:layout_width="93dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_thumb_up"
            android:id="@+id/w" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/date" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/nameWin" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/w"
            app:layout_constraintHorizontal_bias="0.0" android:textAlignment="center" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>