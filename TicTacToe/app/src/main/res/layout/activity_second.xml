<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <TextView
            android:layout_width="94dp"
            android:layout_height="30dp"
            android:id="@+id/t1"
            android:text="Player turn:" android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="X (Guest)"
            android:layout_width="149dp"
            android:layout_height="32dp"
            android:id="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/t1"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.065" android:textSize="24sp"
            android:textColor="@android:color/background_dark"/>
    <TextView
            android:layout_width="95dp"
            android:layout_height="27dp"
            android:id="@+id/t2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/t1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="Player turn:" android:textSize="18sp"/>
    <TextView
            android:text="O"
            android:layout_width="148dp"
            android:layout_height="39dp"
            android:id="@+id/nameWin" app:layout_constraintStart_toEndOf="@+id/t2"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.058" android:textSize="24sp"
            android:textColor="@android:color/background_dark"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameWin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/gameboard">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/row1"
                  android:layout_weight="0" android:orientation="horizontal">
            <Button
                    android:layout_width="120dp"
                    android:layout_height="140dp" android:id="@+id/b1" android:textSize="30sp"/>
            <Button
                    android:layout_width="120dp"
                    android:layout_height="140dp" android:id="@+id/b2" android:textSize="30sp"/>
            <Button
                    android:layout_width="120dp"
                    android:layout_height="140dp" android:id="@+id/b3" android:textSize="30sp"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/row2"
                  android:orientation="horizontal" android:layout_weight="0">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="140dp" android:id="@+id/b4" android:textSize="30sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="140dp" android:id="@+id/b5" android:textSize="30sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="140dp" android:id="@+id/b6" android:textSize="30sp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/row3"
                  android:layout_weight="0" android:orientation="horizontal">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="140dp" android:id="@+id/b7" android:textSize="30sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="140dp" android:id="@+id/b8" android:textSize="30sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="140dp" android:id="@+id/b9" android:textSize="30sp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>